@{
    ViewBag.Title = "Map Demo";

      
}


<div id="map" style="
        width: 100%;
        height: 100%;
        background-color: #a9a9a9
">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#formModal" style="float: left; position: absolute; margin: 20px 100px; z-index: 1500;">
        Agregar POI
    </button>

    

    <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">PUNTOS DE INTERES</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Index", "ApiController", FormMethod.Post))
                    {
                    <fieldset>
                        <div class="editor-field">
                            <label>NOMBRE</label>
                            <input type="text" class="form-control" id="nombre">
                        </div>

                        <div class="editor-field">
                            <label>DIRECCION</label>
                            <input type="text" class="form-control" id="direccion">
                        </div>

                        <div class="editor-field">
                            <label>TELEFONO</label>
                            <input type="text" class="form-control" id="telefono">
                        </div>

                        <div class="editor-field">
                            <label>COORDENADAS</label>
                            <input type="text" class="form-control" id="coordenadas">
                        </div>

                        <div class="editor-field">
                            <label>CATEGORIAS</label>
                            @Html.DropDownList("Listado_Categorias", (List<SelectListItem>)ViewBag.Listado_Categorias, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </fieldset>
                    }

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>
   




@section scripts {
    <script src="https://js.arcgis.com/3.31/"></script>
    <script type="text/javascript" src="~/Scripts/Asa.MapApi.js"></script>

}